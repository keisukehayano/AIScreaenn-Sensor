<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_geturl" />

    <EditText
        android:id="@+id/etgeturl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btGetUrlRegist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onRegistGetUrlButtonClick"
        android:text="@string/bt_regist" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_urlTitle" />

    <EditText
        android:id="@+id/etUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textUri"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btRegist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRegistButtonClick"
            android:text="@string/bt_regist" />

        <TextView
            android:id="@+id/tvUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvResJson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp" />


    <RadioGroup
        android:id="@+id/rgroup_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小盛" />

        <RadioButton
            android:id="@+id/rButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中盛" />

        <RadioButton
            android:id="@+id/rButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大盛" />

        <RadioButton
            android:id="@+id/rButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="特盛" />

        <RadioButton
            android:id="@+id/rButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="熱盛" />


    </RadioGroup>


    <TextView
        android:id="@+id/sum_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clickStartButton"
            android:text="START" />

        <Button
            android:id="@+id/restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clickResetButton"
            android:text="RESET" />

        <Button
            android:id="@+id/stopButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clickStopButton"
            android:text="STOP" />

    </LinearLayout>

    <TextView
        android:id="@+id/counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorLink="@android:color/darker_gray"
        android:textSize="10sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_timePoint"
        android:textColorLink="@android:color/darker_gray"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/timeCount1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorLink="@android:color/darker_gray"
        android:textSize="10sp" />


    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>

